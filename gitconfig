[core]
    autocrlf = input
    safecrlf = true
    editor = nvim

[push]
    default = simple

[color]
    ui = auto

[diff]
    colorMoved = default

[merge]
    conflictstyle = diff3

[alias]
    l = log --pretty=format:'%C(auto)%ad %h %s%d' --graph --all --max-count=10 --date=short
    ll = log --pretty=format:'%C(auto)%ad %h %s%d [%an]' --graph --all --date=short
    co = checkout
    ci = commit -m
    st = status
    br = branch
    ba = branch -a
    d = diff

[init]
	defaultBranch = main
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
