[core]
    autocrlf = input
    safecrlf = true
    editor = nvim
    pager = delta

[push]
    default = simple

[color]
    ui = auto

[diff]
    colorMoved = default

[difftool]
    prompt = false

[merge]
    conflictstyle = diff3

[alias]
    l = log --pretty=format:'%C(auto)%ad %h %s%d' --graph --all --max-count=30 --date=short
    ll = log --pretty=format:'%C(auto)%ad %h %s%d [%an]' --graph --all --date=short
    co = checkout
    ci = commit -m
    st = status
    br = branch
    ba = branch -a
    d = diff
    dt= difftool

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    side-by-side = true
