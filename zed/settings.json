// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "single_file_review": false,
    "always_allow_tool_actions": false,
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "terminal": {
    "env": {
      "TERM_PROGRAM": "zed"
    }
  },

  "confirm_quit": true,
  "tab_bar": { "show": false },
  "when_closing_with_no_tabs": "keep_window_open",
  "show_edit_predictions": true,

  "icon_theme": "Monospace Icon Theme - Dark",

  "buffer_font_family": "Monaspace Argon",
  "buffer_font_weight": 300,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  //for Monospace ligatures
  "buffer_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss09": true,
    "calt": true,
    "liga": true
  },

  "theme": {
    "mode": "light",
    "light": "One Light",
    "dark": "One Dark"
  },

  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "lsp": {
    "pylsp": {
      "settings": {
        "plugins": {
          "pycodestyle": {
            "enabled": false
          },
          "rope_autoimport": {
            "enabled": false
          },
          "pylsp_mypy": {
            "enabled": false
          }
        }
      }
    }
  },

  "languages": {
    "Python": {
      "language_servers": ["pylsp", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "SQL": {
      "format_on_save": "off",
      "formatter": {
        "external": {
          // sql-formatter must be installed so
          // I used python `nodeenv` from requeriments.txt (project scope)
          // in order to install npm packages in an isolated way:
          // ```
          // nodeenv .nodeenv
          // source .nodeenv/bin/activate
          // npm install -g sql-formatter
          // ```
          "command": ".nodeenv/bin/sql-formatter"
        }
      }
    }
  }
}
