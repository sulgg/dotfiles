// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "errors"
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_branch_name": false,
    "show_project_items": false,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_menus": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },
  "autosave": "on_focus_change",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "project_panel": {
    "dock": "left",
    "default_width": 200
  },
  "outline_panel": {
    "dock": "left",
    "default_width": 200
  },
  "git_panel": {
    "dock": "right",
    "default_width": 200
  },
  "agent": {
    "dock": "right",
    "single_file_review": false,
    "always_allow_tool_actions": false,
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    }
  },
  "terminal": {
    "button": false, // open it with ctrl-` instead
    "env": {
      "TERM_PROGRAM": "zed"
    }
  },

  "confirm_quit": true,
  "when_closing_with_no_tabs": "keep_window_open",
  "show_edit_predictions": false,

  "icon_theme": "Catppuccin Latte",

  "colorize_brackets": true,

  "buffer_font_family": "Monaspace Argon",
  "buffer_font_weight": 300,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  //for Monospace ligatures
  "buffer_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss09": true,
    "calt": true,
    "liga": true
  },

  "theme": {
    "mode": "light",
    "light": "Modus Operandi",
    "dark": "One Dark"
  },

  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Python": {
      // change lsp when https://github.com/astral-sh/ty reach production ready
      "language_servers": ["!basedpyright", "ty", "ruff"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "SQL": {
      // SQL extension must be installed
      "format_on_save": "off",
      "formatter": {
        "external": {
          // sql-formatter must be installed so
          // I used python `nodeenv` from requeriments.txt (project scope)
          // in order to install npm packages in an isolated way:
          // ```
          // nodeenv .nodeenv
          // source .nodeenv/bin/activate
          // npm install -g sql-formatter
          // ```
          "command": ".nodeenv/bin/sql-formatter"
        }
      }
    }
  }
}
